<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button
        android:text="Домой"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ButBack2"
        android:onClick="onClickBack1" />

    <ListView
        android:id="@+id/list3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="false"
        android:layout_below="@+id/textWereYou"
        android:layout_marginTop="5dp" />

    <Button
        android:text="Назад к отделам"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:id="@+id/ButBack2"
        android:onClick="onClickBack2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textWereYou"
        android:textAlignment="center"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

</RelativeLayout>